<Page
    x:Class="CattBotControllerApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CattBotControllerApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="C.A.T.T. Bot Controller" HorizontalAlignment="Center" Margin="10"/>
            <Button x:Name="UpButton" Margin="5" HorizontalAlignment="Center" Content ="Move Catapult Arm Up" Click="UpButton_OnClick"/>
            <Button x:Name="StopButton" Margin="5" HorizontalAlignment="Center" Content ="STOP Catapult Arm" Click="StopButton_OnClick"/>
            <Button x:Name="DownButton" Margin="5" HorizontalAlignment="Center" Content="Move Catapult Arm Down" Click="DownButton_OnClick"/>
            <Button x:Name="TurnOnLightButton" Margin="5" HorizontalAlignment="Center" Content="Turn Warning Light On" Click="TurnOnLightButton_Click"/>
            <Button x:Name="TurnOffLightButton" Margin="5" HorizontalAlignment="Center" Content="Turn Warning Light Off" Click="TurnOffLightButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
